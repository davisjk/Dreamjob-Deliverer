<!DOCTYPE html>
<html>
<head>
	<% include ../partials/header.ejs %>
	
	<script>
		$(function(){
				$('#download').style.display = none;
		});
	</script>
</head>

<body>

<div class="container-fluid">
	<h2 style="text-align:center; padding:10px;">&lt;&lt;test name here&gt;&gt;</h2>
	
	<div class="row" style="min-height:64px">
		<div class="col-sm-2"></div>
		
		<div class="col-sm-4">
			<!-- Upload field and button -->
			<form class="form" role="form" id="test_submission">
				<div class="input-group input-group-lg">
					<label class="input-group-btn">
						<span class="btn btn-default">
							Browse
							<input class="form-control-static" type="file" style="display:none" required />
						</span>
					</label>
					<input class="form-control" type="text" readonly />
					
					<span class="input-group-btn">
						<button class="btn btn-primary" type="submit" for="#test_submission">Submit</button>
					</span>
				</div>
			</form>
		</div>
		
		<div class="col-sm-4">
			<!-- Time remaining -->
			<div>
				<div style="float:right">
					<button class="btn btn-warning btn-lg" data-toggle="collapse" data-target="#time_remaining">Time Remaining</button>
				</div>
				<div id="time_remaining" class="collapse input-lg" style="float:right; text-align:right; vertical-align:middle;">
					<!-- time here -->
					This is an indication of time.
				</div>
				<div style="clear:both"></div>
			</div>
		</div>
		
		<div class="col-sm-2"></div>
	</div>
	
	<div class="row">
		<div class="col-sm-2"></div>
		
		<div class="col-sm-8">
			<!-- Upload success -->
			<div class="alert alert-success fade in" hidden>
				<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
				<strong>Success!</strong> The file &lt;&lt;filename here&gt;&gt; uploaded successfully.
			</div>
		</div>
		
		<div class="col-sm-2"></div>
	</div>
	
	<hr />
	
	<div class="row">
		<div class="col-sm-2"></div>
		
		<div class="col-sm-8">
			<!-- Test PDF display -->
			<div class="embed-responsive embed-responsive-16by9" id="pdf_viewport">
				<iframe src="/pdfFiles/temp.pdf#toolbar=0" width="100%" height="100%"></iframe>
				<!-- <object data="pdfFiles/temp.pdf" width="600" height="500"></object> -->
			</div>
		</div>
		
		<div class="col-sm-2"></div>
	</div>
</div>

</body>
</html>
